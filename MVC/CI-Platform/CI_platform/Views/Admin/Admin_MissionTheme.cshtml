@using CI_platfom.Entity.ViewModel
@model AdminVM
@{
    ViewData["Title"] = "Admin_MissionTheme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
     <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>
     <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <link rel="stylesheet" href="~/css/Admin.css">
     <script src="~/js/Admin.js"></script>
</head>
       <div id="partialViewContainer"> 
      <h3 class="ms-5 mt-4 spanUser"><span>MissionThemes</span> </h3>
   <div class="row mt-5">
                <div class="col-md-9 col-6 ms-5 ">
                    <form action="" class="">
                        <div class="border searchMission d-flex w-50">
                            <button type="button" class="btn"><img src="images/search.png" alt=""></button>
                            <input class="form-control me-2 border-0 bg-transparent" type="search" placeholder="Search "
                                id="searchbtn" aria-label="Search">
                        </div>
                    </form>
                </div>
                <div class="col d-flex justify-content-center">
                    <button type="button" class="Save-btn" id="addBtn" onclick="UpdateMissionTheme(0)">
                        <i class="fa-solid fa-plus pe-2"></i>  Add  </button>
                </div>
            </div>
            <!-- ends search -->

            <div class="table-responsive ms-5 mt-5">
                <table id="example" class="table nowrap border" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th class="border-bottom-0">Mission Theme Title</th>
                            <th class="border-bottom-0"> status</th>
                            <th class="border-bottom-0">Action</th>
                        </tr>
                    </thead>
                    <tbody>
   
                         @{
                var Cnt = Model.missionThemes.Where(MissionTheme=>MissionTheme.DeletedAt==null);
                Console.WriteLine(Cnt);
                foreach (var Themes in Cnt)
                {
                            <tr>
                            <td>@Themes.Title</td>
                            <td>
                             @if (@Themes.Status == 1)
                            {
                             <p style="color: green;">Active</p>
                            }
                                else
                               {
                                    <p style="color: red;">Inactive</p> 
                            }
                             </td>
                            <td>  
                                <button class="btn border-0" data-bs-toggle="modal" id="addbtn"
                                    data-bs-target="#editModal" onclick="UpdateMissionTheme(@Themes.MissionThemeId)"><i class="fa-solid fa-pen-to-square"></i></button>
                                 <button class="btn border-0" onclick="DeletemissionThemes(@Themes.MissionThemeId)"><i class="fa-solid fa-trash-can"></i></button>

                            </td>
                        </tr>      

                }
                            }
                        
                        
                    </tbody>
                </table>
            </div>
            </div>