@using CI_platfom.Entity.ViewModel
@model AdminVM
@{
    ViewData["Title"] = "Admin_Mission";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
        <link rel="stylesheet" href="~/css/Admin.css">
</head>

      <h3 class="ms-5 mt-4 spanUser"><span>Mission</span> </h3>
      <div class="d-flex justify-content-between mt-5">
    
        
            <div class="border searchMission">
                <button type="button" class="btn"><img src="~/images/search.png" alt=""></button>
                <input class="form-control border-0 bg-transparent" type="search" placeholder="Search "
                    id="searchbtn" aria-label="Search">
            </div>
        <button type="button" class="btn rounded-pill px-4" id="addBtn" data-bs-toggle="modal" data-bs-target="#timeModal">
            <i class="fa-solid fa-plus pe-2"></i>
            Add
        </button>
  
</div>

            <div class="table-responsive ms-5 mt-5">
                <table id="example" class="table nowrap border" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th class="border-bottom-0 ">Mission Title</th>
                            <th class="border-bottom-0">Mission Type </th>
                            <th class="border-bottom-0">Start Date</th>
                            <th class="border-bottom-0">End Date</th>
                            <th class="border-bottom-0">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                   
                                 @{
                var Count = Model.Missions;
                Console.WriteLine(Count);
                foreach (var mission in Count)
                {
                     <tr>
                            <td>@mission.Title</td>
                            <td>@mission.MissionType</td>
                            <td>@mission.StartDate</td>
                            <td>@mission.EndDate</td>
         
                            <td>
                                <button class="btn border-0" data-bs-toggle="modal" id="addbtn"
                                    data-bs-target="#editModal"><i class="fa-solid fa-pen-to-square"></i></button>
                                <button class="btn border-0"><i
                                        class="fa-solid fa-trash-can"></i></button>
                            </td>
                        </tr>      

                }
         
                            
                            }

                    
                    </tbody>
                </table>
            </div>
            </div>