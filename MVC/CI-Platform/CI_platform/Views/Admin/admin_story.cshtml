@using CI_platfom.Entity.ViewModel
@model AdminVM
@{
    ViewData["Title"] = "Admin_Mission";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
     <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>
     <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <link rel="stylesheet" href="~/css/Admin.css">
</head>
          <div id="partialView">
      <h3 class="ms-5 mt-4 spanUser"><span>Story</span> </h3>
   <div class="row mt-5">
                <div class="col-md-9 col-6 ms-5 ">
                    <form action="" class="">
                        <div class="border searchMission d-flex w-50">
                            <button type="button" class="btn"><img src="~/images/search.png" alt=""></button>
                            <input class="form-control me-2 border-0 bg-transparent" type="search" placeholder="Search "
                                id="searchbtn" aria-label="Search">
                        </div>
                    </form>
                </div>
            </div>
            <!-- ends search -->

            <div class="table-responsive ms-5 mt-5">
                <table id="example" class="table nowrap border" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th class="border-bottom-0">Story Title</th>
                            <th class="border-bottom-0">Full Name</th>
                            <th class="border-bottom-0">Mission Title</th>
                            <th class="border-bottom-0">Action</th>
                        </tr>
                    </thead>
                    <tbody>
   
                         @{
                var Cnt = Model.Stories.Where(Story=>Story.DeletedAt==null);
                Console.WriteLine(Cnt);
                foreach (var story in Cnt)
                {
                        <tr class="text-muted">
                            <td>@story.Title</td>
                            <td>@story.User.FirstName @story.User.LastName</td>
                             <td>@story.Mission.Title</td>
                       
                            <td>  
                                <button class="view-btn"  onclick="ViewStory(@story.StoryId)">
                                    View
                                </button>
                       
                                <button class="btn border-0"  onclick="ApproveStatusStory(@story.StoryId,true)" ><i class="fa-regular fa-circle-check" style="font-size: 22px;"></i></button>
                                <button class="btn border-0"  onclick="ApproveStatusStory(@story.StoryId,false)" ><i class="fa-regular fa-circle-xmark"  style="font-size: 22px;"></i></button>
                                 <button class="btn border-0" onclick="DeleteStory(@story.StoryId)"><i class="fa-solid fa-trash-can"></i></button>

                            </td>
                        </tr>      

                }
                            }
                        
                        
                    </tbody>
                </table>
            </div>
            </div>