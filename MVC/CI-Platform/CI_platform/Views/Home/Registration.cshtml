@using CI_platfom.Entity.ViewModel
@model LandingPageVM
@{
        Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}
<!DOCTYPE html>
<html lang="en">
  
    <body>
               
                <form asp-action="Registration" method="post" class="login mt-md-2 mt-sm-2 mt-5">

                       
                        <div class="mb-3 fname">
                            <label  class="form-label mb-0">First Name</label>
                            <input asp-for="FirstName"  type="text" class="form-control h-lg-100 h-md-75 h-sm-" id="FirstName" placeholder="evan">
                             <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3 lname">
                            <label class="form-label mb-0">Last Name</label>
                            <input asp-for="LastName" type="text" class="form-control" id="lname" placeholder="donohue">
                             <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3 phone">
                            <label  for="phone" class="form-label mb-0" >Phone Number</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" placeholder="8923454615" >
                             <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3 mail">
                            <label  for="email" class="form-label mb-0">Email address</label>
                            <input asp-for="Email" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="evan.donohue@gmail.com" >
                        <span style="colour:red;" asp-validation-for="Email"></span>
                        </div>
                        <div class="mb-3 pass">
                            <label   for="password" class="form-label mb-0" >Password</label>                                
                            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="**********" >
                       <span style="colour:red;" asp-validation-for="Password"></span>
                        </div>
                        <div class="mb-3 repass">
                            <label for="" class="form-label mb-0" >confrim password</label>                                
                            <input for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="**********" >
                        </div>
                       
                        <button type="submit" class="register-btn">Register</button>
                      
                        <div id="forgotpw" class="mt-3 text-center"><a asp-controller="Home" asp-action="Forgot">Lost your password?</a></div>
                        <div id="login" class="mt-3 text-center">Already registered? <a asp-controller="Home" asp-action="lOGIN">Login now</a></div>
                        <div id="privacy-policy" class="text-center mt-lg-5 mt-md-2 mt-sm-2 mt-5">Privacy Policy</div>
                    </form>
             
          
    </body>
</html>
