
@using CI_platfom.Entity.ViewModel
@model AdminVM
@{
    ViewData["Title"] = "Admin_Mission";
    Layout = null;
}
<div class="border mt-5 ms-5 me-5">
    <h3 class="px-3 py-2 heading">Edit</h3>
    <div class="form ms-3 mt-4 me-1">
        <form name="cmspage" asp-controller="Admin" asp-action="AdminAddCms" method="post">

            <div class="mb-3">
                <input type="hidden" asp-for="AddCmsPage.CmsPageId">
                <label for="title" class="form-label" asp-for="AddCmsPage.Title">Title</label>
                <input type="text" class="form-control text-secondary" id="Title" name="Title" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label" asp-for="AddCmsPage.Description">Description</label>
                <textarea id="editor1" name="editor1" class="text-secondary" placeholder="When an unknown printer" required>
                            </textarea>
            </div>
            <div class="mb-3">
                <label for="slug" class="form-label" asp-for="AddCmsPage.Slug">Slug</label>
                <input type="text" class="form-control text-secondary" id="Slug" name="Slug" required>
            </div>
            <div class="mb-3">
                  @{
                            <label for="status" class="form-label text-secondary">Status:</label>
                             <select class="form-select text-secondary" id="status" asp-for="AddCmsPage.Status" >
                                 @if (Model.AddCmsPage!= null && Model.AddCmsPage.Status== 1) {
                                 <option value="1" selected>Active</option>
                                    <option value="0">In-Active</option>} 
                                    else {
                                           <option value="1">Active</option>
                                           <option value="0" selected>In-Active</option> }
 
                             </select>
                          }
            </div>
            <div class="mb-3 d-flex justify-content-end me-2">
                <button type="button" class="btn btn-outline-secondary rounded-pill px-4 me-3" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn changePassword rounded-pill px-4">Save</button>
            </div>
        </form>
    </div>
</div>
 <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/js/bootstrap.bundle.min.js"></script>
<script src="~/js/Admin.js"></script>
<script src="https://cdn.ckeditor.com/4.20.2/full/ckeditor.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>

<script>
        // script for ckeditor
        CKEDITOR.replace('editor1', {
            height: 260,
            baseFloatZIndex: 10005,
            removeButtons: 'PasteFromWord'
        });
    </script>