    <script src="~/js/Filters.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
<div class="container mb-3">
    <a style="color: black;" asp-controller="Mission" asp-action="PrivacyPolicy">Privacy Policy</a>

    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#staticBackdrop2">
        <h6 class="">CONTACT US</h6>

    </button>
<div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdrop2Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-bottom-0">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">CONTACT US</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="contact-form">
                <input type="UserId" name="UserId" value="LoggedUser.UserId" class="form-control" hidden></input>
                <div class="form-group mx-5">
                    <label for="email">NAME</label>
                    <input type="NAME" asp-for="LoggedUser.FirstName" class="form-control" value="@Model.LoggedUser.FirstName" disabled>
                </div>
                <div class="form-group mx-5">
                    <label for="email">Email</label>
                    <input type="email" asp-for="LoggedUser.Email"class="form-control" name="email" value="@Model.LoggedUser.Email" readonly>
                </div>
                <div class="form-group mx-5">
                    <label for="subject">Subject</label>
                    <input type="text" asp-for="Contact.Subject" class="form-control" name="subject" maxlength="255">
                </div>
                <div class="form-group mx-5">
                    <label for="message">Message</label>
                    <textarea id="message"  asp-for="Contact.Message" name="message" class="form-control" maxlength="60000"></textarea>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="login-btn rounded-pill px-4 w-50" onclick="submitForm()">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>

</html>




