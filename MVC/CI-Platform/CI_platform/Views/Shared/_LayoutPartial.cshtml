@using CI_platfom.Entity.ViewModel
@model LandingPageVM
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" charset="UTF-8" content="width=device-width, initial-scale=1.0">
         <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"/>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
         <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
          <partial name="_notificationPartial" />
        <div class="container-fluid mt-1">
            <div class="row">
 <div class="col-lg-8 images">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @{
                var banners = Model.Banners.OrderBy(banner => banner.SortOrder);
                for (int i = 0; i < banners.Count(); i++)
                {
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" class="@((i == 0) ? "active" : "")" aria-label="Slide @(i + 1)"></button>
                }
            }
        </div>
        
        <div class="carousel-inner">
            @{
               
                foreach (var banner in banners)
                {
                    <div class="carousel-item @((banner == banners.First()) ? "active" : "")">
                        <img src="@Url.Content(banner.Image)" alt="@banner.Text" class="d-block w-100">
                        <div class="carousel-caption d-none d-md-block">
                            <p class="sub-text">@banner.Text</p>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
      <div class="col-lg-4 d-flex justify-content-center align-items-center">
 
        @RenderBody()
    </div>
        </div>
            </div>
          
    </body>
   
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Filters.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</html>
