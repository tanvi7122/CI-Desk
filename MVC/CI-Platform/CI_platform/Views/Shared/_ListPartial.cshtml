@using CI_platfom.Entity.ViewModel
@model IEnumerable<Landing_page>
      <div class="list">
                        <div id="list" class="tabcontent mt-3">
                            <div class="container">
                                <div class="row">
                                    <div class="column">
                                 @foreach (var Landing_page in Model)
                            {
                                 <div class="card mb-5">
                                            <div class="row">
                                                <div class="col-md-4 ">
                                                    <div class="position-relative">
                                                        <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability.png"
                                                            alt="Grow-Trees" class="card-img-bottom" />

                                                        <div class="position-absolute top-0 end-0"> <button
                                                                class="btn-1" type="submit"><img src="~/images/pin.png"
                                                                    alt="buttonpng" />@Landing_page.CityName</button></div>
                                                        <div class="position-absolute top-50 end-0 translate-middle-y">
                                                            <button class="btn-2" type="submit"><img
                                                                    src="~/images/heart.png" alt="buttonpng" /></button>
                                                        </div>
                                                        <div class="position-absolute bottom-0 end-0"><button
                                                                class="btn-3" type="submit"><img src="~/images/user.png"
                                                                    alt="buttonpng" /></button>
                                                        </div>
                                                        <div class="position-absolute top-100 start-50 translate-middle bg-light p-1"
                                                            style="border-radius:18px;">
                                                            <p>@Landing_page.ThemeTitle</p>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="col-md-8 ">
                                                    <div class="card-body">
                                                        <div class="d-flex  justify-content-evenly"
                                                            style="flex-direction: rows;">
                                                            <div><img src="~/images/pin1.png">Atlanta</div>
                                                            <div><img src="~/images/web.png">@Landing_page.ThemeTitle</div>
                                                            <div><img src="~/images/organization.png">@Landing_page.OrganizationName</div>
                                                            <div><img src="~/images/selected-star.png"><img
                                                                    src="~/images/selected-star.png"><img
                                                                    src="~/images/selected-star.png"><img
                                                                    src="~/images/selected-star.png"><img
                                                                    src="~/images/star.png"></div>
                                                        </div>
                                                        <h4 class="card-title">@Landing_page.Title</h4>
                                                        <p class="card-text">
                                                            @Landing_page.ShortDescription
                                                        </p>
                                                        <div class="row">
                                                            <div class="col-lg-2 col-md-6">
                                                                <img src="~/images/Seats-left.png">
                                                                @Landing_page.Availability
                                                            </div>
                                                            <div class="col-1 p-0"><img src="~/images/achieved.png"></div>
                                                            <div class="col-1  p-0">
                                                                <div class="progress" role="progressbar"
                                                                    aria-label="Basic example" aria-valuenow="25"
                                                                    aria-valuemin="0" aria-valuemax="100">
                                                                    <div class="progress-bar"
                                                                        style="background-color:#ff8634 ; width: 25%;">
                                                                    </div>
                                                                </div>
                                                                Achieved
                                                            </div>
                                                            <div class="col-lg-1 col-md-2">
                                                                <img src="~/images/calender.png">
                                                            </div>
                                                            <div
                                                                class="col-lg-2 col-md-4 p-0 d-flex justify-content-between">
                                                                From @Landing_page.StartDate.Value.ToShortDateString() untill @Landing_page.EndDate.Value.ToShortDateString()</div>

                                                            <div class="col-lg-2 col-md-6">
                                                                <i class="bi bi-tools"></i>
                                                               @Landing_page.MissionType
                                                            </div>
                                                            <div class="col-lg-3 col-md-12 ">
                                                                <button type="button" class="btn_view p-2">view details
                                                                    <img src="~/images/right-arrow.png"></button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                            }
                           
                                    </div>
                                </div>
                                
                              
                            </div>
                        </div>
                    </div>
                </div>