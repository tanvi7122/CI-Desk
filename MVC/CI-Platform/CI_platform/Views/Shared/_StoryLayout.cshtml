@using CI_platfom.Entity.ViewModel
@model StoryLandingPageVM
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CI_platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   <link rel="stylesheet" href="~/css/Story.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/ShareYourStory.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/HomePage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mission.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CI_platform.styles.css" asp-append-version="true" />
     <link rel="stylesheet" href="css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
    <link rel="stylesheet" href="~/lib/Font-Awesome/css/regular.min.css">
    <link rel="stylesheet" href="~/lib/Font-Awesome/css/solid.min.css">
</head>
<body>
   
        <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
          <div class="container">
            <div>
                <button class="menu-btn border-none bg-white " type="button" data-bs-toggle="offcanvas" data-bs-target="#headerContent" aria-controls="headerContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span><img src="~/images/list.png"/></span>
                </button>
                <a class="navbar-brand" asp-controller="Home" asp-action="HomePage">
                    <img src="~/images/logo.png" />
                </a>
            </div>
            
            <div class="offcanvas offcanvas-start" id="headerContent">
              <div class="offcanvas-header flex-row-reverse">
                  <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
              </div>
              <ul class="navbar-nav me-auto mb-2 mb-lg-0 offcanvas-body">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page"  asp-controller="Story" asp-action="StoryListing">Stories</a>
                </li>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Policy
                  </a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#">Volunteering</a></li>
                    <li><a class="dropdown-item" href="#">Sponsored</a></li>
                    <li><a class="dropdown-item" href="#">Terms and Conditions</a></li>
                  </ul>
                </li>
              </ul>
            </div>
            <div class="right-div d-flex">
               @* <button class="border-none bg-white m-2 me-4">
                    <img src="~/images/bell.png"/>
                     <span class="top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            4
                        </span>
                </button>*@

                  <div class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                       
                    <img src="~/images/bell.png"/>
                     <span class="top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            4
                        </span>
              
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown">
                        <li><a class="dropdown-item" href="#">My Profile</a></li>
                        <li><a class="dropdown-item" href="#">Volunteering Timesheet</a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Login">Logout</a></li>
                    </ul>
                </div>


                <div class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      
                               @{
                               if(@Model.LoggedUser.Avatar !=null)
                                {
                                  <span><img src=@Model.LoggedUser.Avatar class="rounded-circle"/></span>
                                }
                               else
                               {
                                   <span><img src="~/images/user1.png" class="rounded-circle profilephoto"/></span>
                               }
                               } 
                        <p class="d-inline" id="profiletext">
                                @Model.LoggedUser.FirstName @Model.LoggedUser.LastName
                        </p>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                        <li><a class="dropdown-item" href="#">My Profile</a></li>
                        <li><a class="dropdown-item" href="#">Volunteering Timesheet</a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Login">Logout</a></li>
                    </ul>
                </div>
            </div>
          </div>
        </nav>
    </header>
   <partial name="_notificationPartial" />
    <div>
     
        @RenderBody()
    </div>
      @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
       <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
    

     <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/StoryPage.js"></script>
  <script src="https://cdn.ckeditor.com/4.20.2/standard/ckeditor.js"></script>
 
</body>
</html>




